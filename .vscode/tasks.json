{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run All (Docker Compose)",
      "type": "shell",
      "command": "docker compose up",
      "options": {
        "cwd": "${workspaceFolder}/docker"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Stop All Containers",
      "type": "shell",
      "command": "docker compose down",
      "options": {
        "cwd": "${workspaceFolder}/docker"
      },
      "group": "build",
      "problemMatcher": []
    }
  ]
}
