# Backend (Node/Apollo/Prisma)
NODE_ENV=development
PORT=4000

# PostgreSQL connection (used by Prisma)
DATABASE_URL=postgresql://postgres:postgres_password@postgres:5432/lsa_db?schema=public

# JWT / Auth
JWT_SECRET=change_this_to_a_strong_secret
JWT_EXPIRES_IN=7d

# OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:4000/auth/google/callback

# AI Engine (internal)
AI_ENGINE_URL=http://ai_engine:5000
AI_ENGINE_KEY=optional_internal_key

# Prisma
SHADOW_DATABASE_URL=postgresql://postgres:postgres_password@postgres:5432/lsa_shadow

# Logging / Sentry (optional)
SENTRY_DSN=

# Misc
NODE_DEBUG=false
