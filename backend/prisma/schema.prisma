generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int       @id @default(autoincrement())
  name        String
  email       String    @unique
  password    String
  role        Role      @default(USER)
  createdAt   DateTime  @default(now())
  sessions    Session[]
  feedback    Feedback[]
  documents   Document[]
}

model Session {
  id          Int       @id @default(autoincrement())
  token       String
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
  createdAt   DateTime  @default(now())
}

model Document {
  id          Int       @id @default(autoincrement())
  title       String
  content     String
  source      String
  createdAt   DateTime  @default(now())
  user        User?     @relation(fields: [userId], references: [id])
  userId      Int?
  feedback    Feedback[]
}

model Feedback {
  id          Int       @id @default(autoincrement())
  user        User?     @relation(fields: [userId], references: [id])
  userId      Int?
  document    Document? @relation(fields: [documentId], references: [id])
  documentId  Int?
  comment     String
  helpful     Boolean
  createdAt   DateTime  @default(now())
}

model BookRef {
  id          Int       @id @default(autoincrement())
  title       String
  author      String
  chapter     String?
  reference   String?
}

enum Role {
  ADMIN
  LAWYER
  STUDENT
  PUBLIC
  USER
}
